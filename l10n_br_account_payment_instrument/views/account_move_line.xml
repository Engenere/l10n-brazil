<odoo>

    <record model="ir.ui.view" id="account_move_line_form_view">
        <field
            name="name"
        >account.move.line.form (in l10n_br_account_payment_instrument)</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="l10n_br_account.fiscal_invoice_line_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="payment_instrument_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="account_move_line_tree_view">
        <field
            name="name"
        >account.move.line.tree (in l10n_br_account_payment_instrument)</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped" />
        <field name="arch" type="xml">
            <field name="date_maturity" position="after">
                <button
                    name="open_payment_instruments"
                    string="Search"
                    type="action"
                    icon="terp-gtk-jump-to-ltr"
                />
                <!-- <field name="payment_instrument_id" optional="hide" /> -->
            </field>
        </field>
    </record>



</odoo>
