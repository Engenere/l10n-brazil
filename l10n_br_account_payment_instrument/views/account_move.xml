<odoo>

    <record model="ir.ui.view" id="account_move_form_view">
        <field
            name="name"
        >account.move.form (in l10n_br_account_payment_instrument)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account.invoice_form" />
        <field name="arch" type="xml">
            <button name="open_fiscal_document" position="before">
                <field name="payment_instrument_ids" invisible="True" />
                <button
                    name="open_payment_instruments"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('payment_instrument_ids', '=', False)]}"
                >
                    <span>Payment Instruments</span>
                </button>
            </button>
        </field>
    </record>



</odoo>
