<odoo>

    <record model="ir.ui.view" id="l10n_br_payment_instrument_tree_view">
        <field name="model">l10n_br.payment.instrument</field>
        <field name="arch" type="xml">
            <tree default_order='boleto_due ASC'>
                <field name="boleto_due" optional="show" />
                <field name="boleto_amount" optional="show" />
                <field name="instrument_type" optional="show" />
                <field name="line_ids" optional="show" />
                <field name="company_id" optional="show" />
                <field name="boleto_bank_id" optional="show" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_account_payment_instrument_form_view">
        <field name="model">l10n_br.payment.instrument</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="instrument" string="Payment Instrument">
                        <field name="company_currency_id" invisible="1" />
                        <field name="instrument_type" />
                        <field
                            name="pix_qrcode_value"
                            string="QR Code"
                            attrs="{'invisible': [('instrument_type', '!=', 'pix')]}"
                        />
                        <field name="boleto_barcode_entry" />

                        <field
                            name="boleto_barcode"
                            string="Barcode"
                            attrs="{'invisible': [('instrument_type', '!=', 'boleto')]}"
                        />
                        <field
                            name="boleto_digitable_line"
                            string="Digitable Line"
                            decoration-bf="1"
                            attrs="{'invisible': [('instrument_type', '!=', 'boleto')]}"
                        />
                    </group>
                    <group attrs="{'invisible': [('instrument_type', '!=', 'boleto')]}">
                        <label
                            for="boleto_raw_bank"
                            string="Bank"
                            attrs="{'invisible': [('instrument_type', '!=', 'boleto')]}"
                        />
                        <div>
                            <div class="o_row">
                                <field name="boleto_raw_bank" decoration-bf="1" />
                                <field name="boleto_bank_id" decoration-bf="1" />
                            </div>
                        </div>
                        <field
                            name="boleto_amount"
                            string="Amount"
                            widget="monetary"
                            decoration-bf="1"
                        />
                        <field name="boleto_due" string="Due Date" decoration-bf="1" />
                    </group>
                    <notebook>
                        <page
                            name="accouny_move_line_ids"
                            string="Receivable/Payable Accounts"
                        >
                            <field name="line_ids">
                                <tree>
                                    <field name="partner_id" />
                                    <field name="balance" />
                                    <field name="amount_residual" />
                                    <field name="date_maturity" />
                                </tree>
                            </field>
                        </page>
                        <!-- Only Developer Mode -->
                        <page
                            name="raw_data"
                            string="RAW Data"
                            attrs="{'invisible': [('instrument_type', '!=', 'boleto')]}"
                            groups="base.group_no_one"
                        >
                            <group>
                                <field name="boleto_raw_bank" string="Bank" />
                                <field name="boleto_raw_currency" string="Currency" />
                                <field
                                    name="boleto_raw_check_digit_barcode"
                                    string="Check Digit"
                                />
                                <field
                                    name="boleto_raw_due_factor"
                                    string="Due Factor"
                                />
                                <field name="boleto_raw_amount" string="Amount" />
                                <field
                                    name="boleto_raw_free_field"
                                    string="Free Field"
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
