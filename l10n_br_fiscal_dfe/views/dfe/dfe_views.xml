<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="dfe_form">
        <field name="name">l10n_br_fiscal.dfe.form</field>
        <field name="model">l10n_br_fiscal.dfe</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="DF-e Consult">
                <separator string="Access Key" />
                <field name="key" select="1" required="1" readonly="1" />

                <separator string="Document Info" />
                <group>
                    <group>
                        <field name="number" readonly="1" />
                        <field name="nsu" readonly="1" />
                        <field name="cnpj_cpf" readonly="1" />
                        <field name="ie" readonly="1" />
                        <field name="document_value" widget="monetary" readonly="1" />
                        <field name="document_state" readonly="1" />
                    </group>
                    <group>
                        <field name="company_id" required="1" />
                        <!-- <field name="document_id" /> -->
                        <field name="operation_type" readonly="1" />
                        <field name="inclusion_mode" readonly="1" />
                        <field name="inclusion_datetime" readonly="1" />
                        <field name="emission_datetime" readonly="1" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dfe_tree">
        <field name="name">l10n_br_fiscal.dfe.tree</field>
        <field name="model">l10n_br_fiscal.dfe</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="key" />
                <field name="number" />
                <field name="cnpj_cpf" />
                <field name="document_value" />
                <field name="document_state" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dfe_action">
        <field name="name">DF-e Consult</field>
        <field name="res_model">l10n_br_fiscal.dfe</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
